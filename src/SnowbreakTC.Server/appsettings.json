{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Server": {
    "Name": "SnowbreakTC Server",
    "Version": "1.0.0",
    "WebAPI": {
      "Port": 8080,
      "UseHttps": false,
      "Urls": "http://localhost:8080"
    },
    "GameServer": {
      "Port": 22102,
      "MaxConnections": 1000,
      "HeartbeatInterval": 30000,
      "SessionTimeout": 300000
    }
  },
  "Database": {
    "MongoDB": {
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "SnowbreakTC",
      "Collections": {
        "Users": "users",
        "Players": "players",
        "Characters": "characters",
        "Items": "items",
        "Inventories": "inventories"
      }
    },
    "Redis": {
      "ConnectionString": "localhost:6379",
      "Database": 0,
      "KeyPrefix": "snowbreak:",
      "DefaultExpiry": 3600
    }
  },
  "Game": {
    "MaxLevel": 80,
    "StartingCurrency": 10000,
    "DefaultCharacters": [1001, 1002],
    "MaxInventorySlots": 500,
    "Experience": {
      "BaseExp": 100,
      "ExpMultiplier": 1.2
    },
    "Gacha": {
      "RareRate": 0.006,
      "SRRate": 0.051,
      "RRate": 0.943
    }
  },
  "Security": {
    "JWT": {
      "SecretKey": "your-super-secret-key-change-this-in-production",
      "Issuer": "SnowbreakTC",
      "Audience": "SnowbreakTC-Client",
      "ExpiryMinutes": 1440
    },
    "PasswordHash": {
      "WorkFactor": 12
    }
  },
  "AllowedHosts": "*"
}